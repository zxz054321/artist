{% extends "admin/_bootstrap.twig" %}

{% block title %} Login {% endblock %}

{% block body %}
    <div class="container-fluid" id="body">
        <div class="text-center">
            <h1>Artist</h1>
            <p>A blog system for web artists</p>
        </div>

        <div class="row"
             ng-app="app"
             ng-controller="LoginCtrl">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="alert alert-danger alert-dismissible" role="alert"
                     ng-show="match===false"
                     ng-cloak>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <strong>Oh snap!</strong> Change a few things up and try again.
                </div>

                <form ng-submit="submit()">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control"
                                       ng-model="data.password"
                                       required>
                            </div>

                            {#<div class="checkbox">#}
                            {#<label>#}
                            {#<input type="checkbox"#}
                            {#ng-model="data.remember"> Remember me#}
                            {#</label>#}
                            {#</div>#}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default btn-block"
                            ng-disabled="!data.password">
                        Login
                    </button>
                </form>

                <hr>
                {% include 'admin/_copyright.twig' %}
            </div>
        </div>
    </div>
{% endblock %}